extends base.pug

block content
    video(src="/" + video.fileUrl controls width="300", type="video/mp4")
    div
        p=video.description
        p=video.hashtags
        small=video.createdAt
    a(href=`${video.id}/edit`) Edit Video &rarr;
    br
    a(href=`${video.id}/delete`) Delete Video &rarr;